<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10sdp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_home"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_strock_edittext"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                android:text="Cash on delivery"
                android:textColor="#7B7B7B"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/cash_payment"
                android:padding="3dp"
                android:src="@drawable/negative"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_strock_edittext"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                android:text="Card on delivery (POS)"
                android:textColor="#7B7B7B"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/cred_card"
                android:padding="3dp"
                android:src="@drawable/negative"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_strock_edittext"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                android:text="Online Payment"
                android:textColor="#7B7B7B"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/cred_card"
                android:padding="3dp"
                android:src="@drawable/negative"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_strock_edittext"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                android:text="Link payment"
                android:textColor="#7B7B7B"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/cred_card"
                android:padding="3dp"
                android:src="@drawable/negative"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_strock_edittext"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                android:text="Na"
                android:textColor="#7B7B7B"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:padding="2dp"
                app:tint="#FFBEF9"
                android:src="@drawable/close"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="5dp"
                android:text="All"
                android:textColor="#7B7B7B"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>