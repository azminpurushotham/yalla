<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="July 20, 2021"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Online"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switchOnline"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchOnline"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:thumb="@drawable/thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgDelivery"
            app:layout_constraintTop_toTopOf="parent"
            app:track="@drawable/track" />

        <ImageView
            android:id="@+id/imgDelivery"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_primary_button"
            android:padding="8dp"
            android:src="@drawable/delivery_van"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile_man"
        app:civ_border_width="2dp"
        android:layout_marginBottom="10dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="Alex thomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="11sp"
        android:text="Truck Driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_green_home"
                android:layout_height="190dp">

                <TextView
                    android:id="@+id/txt1"
                    android:textSize="16sp"
                    android:text="July \n Earnings"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingEnd="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt2"
                    app:layout_constraintTop_toBottomOf="@+id/txt1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="18sp"
                    android:text="100 QAR"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/txt3"
                    android:textSize="12sp"
                    android:text="View all"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/diagram"
                    android:layout_height="70dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/shape_white_home"
                android:layout_height="160dp">

                <TextView
                    android:id="@+id/txt11"
                    android:textSize="16sp"
                    android:text="Items to \nReturn"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingEnd="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt22"
                    app:layout_constraintTop_toBottomOf="@+id/txt11"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="18sp"
                    android:text="5"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/txt33"
                    android:textSize="11sp"
                    android:text="View all"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/return_box"
                    android:layout_height="60dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_white_home"
                android:layout_height="160dp">

                <TextView
                    android:id="@+id/txt111"
                    android:textSize="16sp"
                    android:text="Items to \nReturn"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingEnd="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt222"
                    app:layout_constraintTop_toBottomOf="@+id/txt111"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="18sp"
                    android:text="5"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/txt333"
                    android:textSize="11sp"
                    android:text="View all"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/return_box"
                    android:layout_height="60dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/selecter_home_gride"
                android:layout_height="190dp">

                <TextView
                    android:id="@+id/txt1111"
                    android:textSize="16sp"
                    android:text="July \n Earnings"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingEnd="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt2222"
                    app:layout_constraintTop_toBottomOf="@+id/txt1111"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="18sp"
                    android:text="100 QAR"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/txt3333"
                    android:textSize="12sp"
                    android:text="View all"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/diagram"
                    android:layout_height="70dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>