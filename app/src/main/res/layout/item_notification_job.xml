<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_one_side_rounded_rect"
        android:orientation="vertical"
        android:paddingTop="19dp"
        android:layout_marginBottom="19dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvJobId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:fontFamily="@font/rubik_medium"
                android:text="Job #0099"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="3"
                android:fontFamily="@font/rubik"
                android:gravity="right"
                android:text="July 20, 2021"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_box__1_"
            android:drawablePadding="4dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:drawableTint="@color/text_primary"
            android:fontFamily="@font/rubik"
            android:text="Orders : 5"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_9ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/location_w"
                    android:drawablePadding="7dp"
                    android:drawableTint="@color/text_primary"
                    android:fontFamily="@font/rubik"
                    android:text="Distance : "
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:text="28 KMS"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_earn_money"
                    android:drawablePadding="2dp"
                    android:drawableTint="@color/text_primary"
                    android:fontFamily="@font/rubik"
                    android:text="Earnings : "
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/tvEarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:text="QAR 15"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/tvAccept"
                android:background="@drawable/shape_oneside_round_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="7dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/rubik"
                    android:gravity="center"
                    android:text="Accept"
                    android:drawableLeft="@drawable/tick_sm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/tvReject"
                android:background="@drawable/shape_oneside_round_gray">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rubik"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:drawableLeft="@drawable/close_b"
                android:drawableTint="@color/white"
                android:layout_centerInParent="true"
                android:text="Reject"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>